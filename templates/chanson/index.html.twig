{% extends 'base.html.twig' %}

{% block title %}Chanson index{% endblock %}

{% block body %}
    <h1>Chanson index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>DateSortie</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>PhotoCouverture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chanson in chansons %}
            <tr>
                <td>{{ chanson.id }}</td>
                <td>{{ chanson.titre }}</td>
                <td>{{ chanson.dateSortie ? chanson.dateSortie|date('Y-m-d') : '' }}</td>
                <td>{{ chanson.genre }}</td>
                <td>{{ chanson.langue }}</td>
                <td><img src={{chanson.photoCouverture}} width="200" height="200" alt="Image de {{chanson.titre}}"></td>
                <td>
                    <a href="{{ path('app_chanson_show', {'id': chanson.id}) }}">show</a>
                    <a href="{{ path('app_chanson_edit', {'id': chanson.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chanson_new') }}">Create new</a>
{% endblock %}
